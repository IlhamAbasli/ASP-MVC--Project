@model SettingEditVM

<div class="container">
    <div class="card">
        <div class="card-header">
            <strong class="text-success">Edit Setting</strong>
        </div>
        <div class="card-body card-block">
            <form asp-action="Edit" method="post" class="">
                <div class="form-group">
                    <label class=" form-control-label">Enter setting key</label>
                    <input asp-for="Key" type="text" placeholder="Enter here..." class="form-control  mb-2" maxlength="100">
                    <span class="text-danger" asp-validation-for="Key"></span>

                    <label class=" form-control-label">Enter setting key value</label>
                    <input asp-for="Value" type="text" placeholder="Enter here..." class="form-control  mb-2" maxlength="100">
                    <span class="text-danger" asp-validation-for="Value"></span>

                </div>
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Submit
                </button>
                <a type="reset" asp-action="Index" class="btn btn-danger btn-sm">
                    <i class="fa fa-ban"></i> Reset
                </a>
            </form>
        </div>
    </div>
</div>

