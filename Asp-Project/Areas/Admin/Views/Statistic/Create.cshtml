@model StatisticCreateVM

<div class="container">
    <div class="card">
        <div class="card-header">
            <strong class="text-success">Create Statistic</strong>
        </div>
        <div class="card-body card-block">
            <form asp-action="Create" method="post" class="">
                <div class="form-group">
                    <label class=" form-control-label">Enter statistic title</label>
                    <input asp-for="Title" type="text" placeholder="Enter title..." class="form-control  mb-2" maxlength="100">
                    <span class="text-danger" asp-validation-for="Title"></span>

                    <label class=" form-control-label">Enter statistic count</label>
                    <input asp-for="Count" type="text" placeholder="Enter count..." class="form-control  mb-2" maxlength="100">
                    <span class="text-danger" asp-validation-for="Count"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Submit
                </button>
                <a type="reset" asp-action="Index" class="btn btn-danger btn-sm">
                    <i class="fa fa-ban"></i> Reset
                </a>
            </form>
        </div>
    </div>
</div>

