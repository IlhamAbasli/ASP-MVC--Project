@model RegisterVM

<div class="container" style="margin-top:170px">
    <div class="tab-pane fade show" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
        <form method="post" asp-action="SignUp">
            <div class="text-center mb-3">
                <h4>Sign up with:</h4>
                <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-facebook-f"></i>
                </button>

                <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-google"></i>
                </button>

                <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-twitter"></i>
                </button>

                <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-github"></i>
                </button>
            </div>

            <p class="text-center">or:</p>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <!-- Name input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <span class="text-danger" asp-validation-for="FullName"></span>
                <input asp-for="FullName" class="form-control" />
                <label class="form-label" for="registerName">Full name</label>
            </div>

            <!-- Username input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <span class="text-danger" asp-validation-for="UserName"></span>
                <input asp-for="UserName" class="form-control" />
                <label class="form-label" for="registerUsername">Username</label>
            </div>

            <!-- Email input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <span class="text-danger" asp-validation-for="Email"></span>
                <input type="text" asp-for="Email" class="form-control" />
                <label class="form-label" for="registerEmail">Email</label>
            </div>

            <!-- Password input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <span class="text-danger" asp-validation-for="Password"></span>
                <input asp-for="Password" class="form-control" />
                <label class="form-label" for="registerPassword">Password</label>
            </div>

            <!-- Repeat Password input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                <input asp-for="ConfirmPassword" class="form-control" />
                <label class="form-label" for="registerRepeatPassword">Confirm password</label>
            </div>

            <!-- Checkbox -->
            <div class="form-check d-flex justify-content-center mb-4">
                <div class="text-center">
                    <p>Already have an account? <a asp-action="SignIn" asp-controller="Account">Log in</a></p>
                </div>
            </div>

            


            <!-- Submit button -->
            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-3 text-white">Sign up</button>
        </form>
    </div>

</div>

